<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
<TextView
    android:id="@+id/tvRate"
    android:gravity="center"
    android:text="Đánh giá chất lượng dịch vụ của chúng tôi"
    android:textSize="18sp"
    android:textColor="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tvRate"
        android:numStars="5"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txtRateDetail"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ratingBar"
        android:layout_marginBottom="10dp"/>
    <Button
        android:textColor="@color/colorWhite"
        android:text="Submit"
        android:background="@color/colorPrimary"
        android:id="@+id/btnRate"
        android:layout_below="@+id/txtDongGop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/tvDongGop"
        android:textSize="17sp"
        android:gravity="center"
        android:text="Đóng góp ý kiến:"
        android:textColor="@color/colorBlack"
        android:layout_below="@id/txtRateDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"/>
    <EditText
        android:id="@+id/txtDongGop"
        android:background="@drawable/bg_green_border_button"
        android:layout_below="@id/tvDongGop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:lines="7"
        android:layout_marginBottom="10dp"/>
</RelativeLayout>